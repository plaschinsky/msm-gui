<h1>All Movies</h1>

<form action="/insert_movie" method="post">
  <label for="title_field">Title</label>
  <input id="title_field" name="query_title" type="text">

  <label for="image_field">Image</label>
  <input id="image_field" name="query_image" type="text">

  <button>Create movie</button>
</form>

<ul>
  <% @movies.each do |movie| %>
    <li><a href="/movies/<%= movie.id %>"><%= movie.title %></a></li>
  <% end %>
</ul>
