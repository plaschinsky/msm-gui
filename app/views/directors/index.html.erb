<h1>All Directors</h1>

<form action="/insert_director" method="post">
  <label for="name_field">Name</label>
  <input id="name_field" name="query_name" type="text">

  <label for="image_field">Image</label>
  <input id="image_field" name="query_image" type="text">

  <button>Create director</button>
</form>

<ul>
  <% @directors.each do |director| %>
    <li><a href="/directors/<%= director.id %>"><%= director.name %></a></li>
  <% end %>
</ul>
